<html lang="en">

<%- include ('./partials/head')  %>

<body>

    <%- include('./partials/header') %>

        <section class = "sectionContainer">
            <div class="container1">
                <h2>Mi Cuenta</h2>
            </div>

            <div class="dataAccount">
                <div class="container2">
                    <img src=<%= image %> alt="Imagen Usuario" width=200%><br>
                    <h3>Mis Datos</h3>
                    <h4><i class="fas fa-user"></i> <%= firstName %>  <%= lastName %>  <br></h4>
                    <h4><i class="fas fa-envelope"></i> <%= email %>  <br></h4>
                    <h4><i class="fas fa-birthday-cake"></i> <%= bday %>  <br></h4>
