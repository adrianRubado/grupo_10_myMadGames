<!DOCTYPE html>
<html lang="en">

<%- include ('./partials/head')  %>

<body>
  <%- include('./partials/header') %>
  <form class="editForm" method="POST" action="/products/<%=game.id %>/edit?_method=PUT" >

    <div class="idEditForm">
    <input type="text"  name="id" value=<%= game.id %> >
    <input type="text"  name="image" value=<%= game.image %> >
    <input type="text"  name="category" value=<%= game.category %> >
    </div>
    <article>
        <div class="nombre">
           <input type="text" name = "name" value=<%= game.name %>>
        </div>
        <div class="cont-padre">
        <div class="contenedor-info">
            <img class="gta" src =<%= game.image  %>  width="360px" ;>

            <div class="iconos">
                <i class="fas fa-dollar-sign"><span class="tip"><input type="text" name= "price" value=<%= game.price %> ></span></i>
                <i class="fas fa-percent"><span class="tip"><input type="text" name="discount" value=<%= game.discount  %>></span></i>



            </div>

        </div>
        <br>
        <div class="descripcionEdit">
            <h5>Descripcion</h5>

            <textarea name="description" rows="10" cols="50"><%= game.description %></textarea>




        </div>
    </div>
    <br>
    <div align = 'left'>
        Requisitos
    </div>
            <div class="requisitos">


            <textarea name="requirements" rows="10" cols="50">
                <%= game.requirements %>
            </textarea>
            <div class="iconos"> Link trailer:
                <input type="text" name="link" value=<%= game.link %>>

             </div>

        </div>
        <p>Recordar que el link debe ser embebido</p>
        <br>
        <button type="submit" id="botones-formularios-cg">Actualizar juego</button>






    </article>



    <div class="commented">
        <i class="far fa-user-circle iconcomented"></i>

    </div>

</section>
</form>


  <!-- Site footer -->
 <%- include ('./partials/footer.ejs') %>





</body>

</html>