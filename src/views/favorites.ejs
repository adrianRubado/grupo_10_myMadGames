<!DOCTYPE html>
<html lang="en">
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body class="bodyFav">
        <%- include('./partials/header.ejs') %>
            <script src='/validations/darkMode.js'></script>

            <section class="sectionFav">
                <% if (games.length > 0) { %>
                    <% games.forEach(g=> { %>
                        <article class="articleFavContainer">
                            <div class="containerNombreEImagen">
                                <div class="nombrediv">
                                    <%= g.name%>
                                </div>
                                <div class="containerimage">
                                    <img src=<%=g.image %> alt=<%= g.name%> width="100">
                                    <input type="hidden" value=<%=g.id %>>
                                </div>
                            </div>
                            <br>
                            <div class="preciodiv">
                                <%= g.price%>
                            </div>
                            <br>
                            <div class="buttonContainer">
                                <button type="submit" class="eliminategame">Eliminar</button>
                            </div>
                            <br>
                        </article>
                        <% }) %>
                <% }else { %>



                    <div class="juegos-chart">

                        <br>
                        <br>
                        <br>
                        <br>

                        <div style = "background-color:white;opacity:0.8;width:160px;text-align:center;border-radius: 8px;"><p style = "color:black;" = >No se encontraron favoritos.</div></p><br><br><br><br><br><br><br><br><br><br><br><br><br><br>';
                        <body class = "bodyFav" style = "height:45vh"></body>

                      </div>


                    <% } %>



            </section>



            <%- include('./partials/footer.ejs') %>



                <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
                <script src="/validations/cart-scripts.js"></script>
                <script src='/validations/darkMode.js'></script>
                <script src='/validations/favScripts.js'></script>


    </body>

</html>