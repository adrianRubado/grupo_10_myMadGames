<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

  <body>

    <%- include('./partials/header.ejs') %>

      <main id="mainSignIn">



<div class="contenedorFormularioSignIn">
        <div class="contenedorTitulosSignIn">

          <h1> Sign In </h1>
          <p>Ingrese sus datos para iniciar sesión </p>

        </div>



          <form action="/user/login" method="POST" id="formularioSignIn">
            
            <div class="form-controle"> 
           

              <label for="email"> Email </label>
          

              <input type="email" id="email" name="email" placeholder="Email" class="inputEmail"> </input>
              <small>errores</small>
            </div>
           
            <div class="form-controle">

              <label for="password"> Password </label>

              <input type="password" id="password" name="password" placeholder="Contraseña" class="inputPassword"> </input>
              <small>errores</small>
             

            </div>
            

                         <div class="contenedorBotonSubSignIn">  <button type="submit" id="submit" class="botonSignIn" >  <img src="/images/logo1.png" width="45px" height="45px"/></button>

           <div class="contRecordameSignIn"> <input type="checkbox"  name="persist" > <label for="recordame" class="recordameLabel"><p>Recordame</p> </label></div>
          </div>
            <a class="forgotPass" href="/user/newPass">Forgot your password?</a>

            <div>
              <ul class="errors-signin"></ul>
            </div>
          </form>
        </div>

      </main>

      <%- include('./partials/footer.ejs') %>
      <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
      <script src="../validations/signin-scripts.js"></script>

  </body>



</html>